<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UI-Regression-Suite" parallel="tests" thread-count="3" >
    <test name="Firefox-Tests">
        <parameter name="browserValue" value="firefox"/>
        <classes>
            <class name="com.greenandtasty.runner.ui.CrossBrowserTests"/>
        </classes>
    </test>
    <test name="Edge-Tests">
        <parameter name="browserValue" value="edge"/>
        <classes>
            <class name="com.greenandtasty.runner.ui.CrossBrowserTests"/>
        </classes>
    </test>
    <test name="Chrome-Tests">
        <parameter name="browserValue" value="chrome"/>
        <classes>
            <class name="com.greenandtasty.runner.ui.CrossBrowserTests"/>
        </classes>
    </test>
</suite>
